
<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>

<%- include('../includes/navigation.ejs') %>

<main class="form-container">
  <form action="/admin/add-product" method="POST">
    <label for="productName">Product Name</label>
    <input type="text" id="productName" name="title">
      
    <label for="productImage">Product Image</label>
    <input type="text" id="productImage" name="imageUrl" >

    <label for="productDescription">Product Description</label>
    <textarea id="productDescription" name="description" rows="4" ></textarea>

    <label for="productPrice">Product Price</label>
    <input type="number" id="productPrice" name="price" min="0" step="0.01" >

    <button type="submit">Add Product</button>
  </form>
</main>

<%- include('../includes/end.ejs') %>
