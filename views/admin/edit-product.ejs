
<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>

<%- include('../includes/navigation.ejs') %>

<main class="form-container">
  <form action="/admin/edit-product/<%= product.id %>" method="POST">
    <label for="productName">Product Name</label>
    <input type="text" id="productName" name="title" value="<%= product.title %>">
      
    <label for="productImage">Product Image</label>
    <input type="file" id="productImage" name="imageUrl" accept="image/*" value="<%= product.imageUrl %>" >

    <label for="productDescription">Product Description</label>
    <textarea id="productDescription" name="description" rows="4"><%= product.description %></textarea>

    <label for="productPrice">Product Price</label>
    <input type="number" id="productPrice" name="price" value="<%= product.price %>" min="0" step="0.01" >

    <button type="submit">Update Product Details</button>
  </form>
</main>

<%- include('../includes/end.ejs') %>
