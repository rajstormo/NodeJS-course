block styles  
  link(rel='stylesheet' href='/css/product.css')

block content 
  main 
    if prods.length > 0
      ul.product-container 
        each product in prods
          li.product-item
            h2 #{product.title}
            p Lorem ipsum dolor sit amet consectetur adipisicing elit. Velit, minus.
            button Add to cart 
    else 
      h2 No Products to Show